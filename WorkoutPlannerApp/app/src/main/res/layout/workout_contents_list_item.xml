<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/set_activity_name"
                android:textSize="15dp"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/set_reps_number"
                android:textSize="15dp"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/set_weight_number"
                android:textSize="15dp"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/minus_set_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_minus"
                android:tint="@color/colorAccent"
                android:onClick="onMinusSetButtonClick"
                android:padding="2dp"/>

            <ImageView
                android:padding="2dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_plus"
                android:id="@+id/plus_set_button"
                android:tint="@color/colorAccent"
                android:onClick="onPlusButtonClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>




    </RelativeLayout>

</LinearLayout>