<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codeclan.workoutplannerapp.CreateWorkoutActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="new workout"
        android:layout_gravity="center"
        android:padding="20dp"/>

    <EditText
        android:id="@+id/workout_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="enter workout name"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorAccent"
        android:padding="20dp"
        />

    <ListView
        android:id="@+id/set_builder_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="?android:attr/borderlessButtonStyle"
        android:background="@color/colorAccent"
        android:text="save"
        android:textColor="@color/colorPrimary"
        android:onClick="onSaveButtonClick"/>

    <ListView
        android:id="@+id/available_activities_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>
