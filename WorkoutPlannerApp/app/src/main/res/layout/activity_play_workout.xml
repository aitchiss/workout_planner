<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codeclan.workoutplannerapp.PlayWorkoutActivity"
    android:orientation="vertical">



    <TextView
        android:id="@+id/current_activity_name"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/current_set_number"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:text="reps"/>

    <EditText
        android:id="@+id/current_reps"
        android:backgroundTint="@color/colorAccent"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:width="50dp"
        android:textAlignment="center"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:text="weight (kg)"/>

    <EditText
        android:id="@+id/current_weight"
        android:backgroundTint="@color/colorAccent"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:inputType="number"
        android:width="50dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/set_finished_button"
        android:layout_marginTop="25dp"
        android:text="done"
        android:layout_gravity="center"
        android:onClick="finishSetButtonClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimary"/>





</LinearLayout>
