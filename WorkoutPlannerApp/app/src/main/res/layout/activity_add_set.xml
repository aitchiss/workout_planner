<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codeclan.workoutplannerapp.AddSetActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/add_set_title"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/add_set_activity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="10dp"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Number of sets: "/>

    <EditText
        android:padding="10dp"
        android:textSize="15dp"
        android:width="50dp"
        android:textAlignment="center"
        android:id="@+id/choose_set_number"
        android:layout_gravity="center"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"/>

    <TextView
        android:padding="10dp"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of reps: "/>

    <EditText
        android:padding="10dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:width="50dp"
        android:backgroundTint="@color/colorAccent"
        android:layout_gravity="center"
        android:id="@+id/choose_reps_number"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="10dp"
        android:textSize="15dp"
        android:text="Weight (kg): "
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:padding="10dp"
        android:width="50dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:backgroundTint="@color/colorAccent"
        android:textSize="15dp"
        android:id="@+id/choose_weight_number"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    <Button
        android:id="@+id/confirm_add_set_button"
        android:onClick="confirmAddSetButtonClick"
        android:text="add"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>
