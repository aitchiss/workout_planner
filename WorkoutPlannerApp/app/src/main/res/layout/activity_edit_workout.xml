<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codeclan.workoutplannerapp.EditWorkoutActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/workout_to_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:padding="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:text="select activity"/>

    <Button
        android:layout_width="wrap_content"
        android:text="custom activity"
        android:id="@+id/add_custom_set"
        android:onClick="addCustomSetClick"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/colorAccent"
        android:background="@color/colorBackground"

        android:layout_marginLeft="18dp"
        android:layout_height="wrap_content" />


    <ListView
        android:id="@+id/available_activities_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>
